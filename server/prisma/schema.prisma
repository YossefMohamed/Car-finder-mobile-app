// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  @@map(name: "users")

  id           String      @id  @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String   
  lastName     String   
  email        String   @unique
  profileImage String?  @default("default.png")
  password      String
  favorites     Favorite[]
  phoneNumber String?
  role      String     @default("user") 

  cars Car[]
  @@index([email])

}


model CarImage {
  name String
  id           String      @id  @default(uuid())
  Car    Car? @relation(fields: [carId], references: [id])
  carId  String

}


model Car {
  @@map(name: "cars")

  id           String      @id  @default(uuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  price       Float
  description String
  userId      String
  Category    Category? @relation(fields: [categoryId], references: [id])
  User    User? @relation(fields: [userId], references: [id])
  categoryId  String
  favorites    Favorite[]
  images    CarImage[]

  @@index([categoryId])

}

model Category {
  @@map(name: "categories")

  id           String      @id  @default(uuid())
  category String @unique
  cars     Car[]
}

model Favorite {
  @@map(name: "favorites")
  User    User? @relation(fields: [userId], references: [id])
  userId String
  Car    Car? @relation(fields: [carId], references: [id])
  carId  String
  id           String      @id  @default(uuid())
}

 
