// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  @@map(name: "users")

  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String   
  lastName     String   
  email        String   @unique
  profileImage String?  @default("default.png")
  password      String
  @@index([email])

}

model Car {
  @@map(name: "cars")

  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  title       String
  description String
  userId      Int
  Category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
  @@index([categoryId])

}

model Category {
  @@map(name: "categories")

  id       Int    @id @default(autoincrement())
  Category String
  cars     Car[]
}

model Favorite {
  @@map(name: "favorites")
  
  userId Int
  carId  Int
  id     Int @id @default(autoincrement())
}

 
